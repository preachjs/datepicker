{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "jsxImportSource": "preact",
    "outDir": "dist",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
